toemoji() {
  local in=/dev/stdin
  local file="$1"
  if [[ -n $file ]]; then
    in="$file"
  fi

  IFS=$'\n'
  while read -r line; do 
    for k in ${!emoji[@]}; do 
      line=${line//:$k:/${emoji[$k]}}
    done
    echo "$line"
  done < "$in"
}

toemoji "$@"
