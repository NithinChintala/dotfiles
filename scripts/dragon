#!/usr/bin/env python
import sys

x, k, r, g, y, b, m, c, w = [""] * 9
if sys.stdout.isatty():
    x='\x1b[0m'     # reset
    k='\x1b[90m'    # blacK
    r="\x1b[91m"    # Red
    g='\x1b[92m'    # Green
    y='\x1b[93m'    # Yellow
    b='\x1b[94m'    # Blue
    m='\x1b[95m'    # Magenta
    c='\x1b[96m'    # Cyan
    w='\x1b[97m'    # White

dragon=r"""
                               %y_
                            %b==%y(%kW%y{%k==========-      %c/%w===%k-
                              ||  %r(%k.--.%r)         %c/%w===%k-%c_---~~~~~~~~~------____
                              %k| \_,|%w**%k|,__      %c|%w===%k-%c~___                _,-'
                 %k-%w==%c\\        %k`\ ' `--'   ),    %c`//~\\   ~~~~`---.___.-~~
             ______%k-%w==%c|        %r/%k`\_. .__/\ \    %c| |  \\           _-~`
       __--~~~  ,-/%k-%w==%c\\      %r(   %k| .  |%r~~~~%k|   %c| |   `\        ,'
    _-~       /'    |  \\     %r)__%k/==%y0%k==-\%r<>%k/   %c/ /      \      /
  .'        /       |   \\      %k/~\___/~~\/  %c/' /        \   /'
 /  ____  /         |    \`\.__/-~~   \  |_/'  /          \/'
/-'~    ~~~~~---__  |     ~-/~         ( )   /'        _--~`
                  \_|      /        _) | ;  ),   __--~~
                    '~~--_/      _-~/- |/ \   '-~ \
                   {\__--_/}    / \\_%k>-|)<%c__\      \
                   /'   (_/  _-~  | |__%k>--<%c__|      |
                  |   %x_/)%c )-~     | |__%k>--<%c__|      |
                  / /~ ,_/       / /__%k>---<%c__/      |
                 o-o _//        /-~_%k>---<%c__-~      /
                 (^(~          /~_%k>---<%c__-      _-~
                %r,/|           %c/__%k>--<%c__/     _-~
             %r,//%y(%r'(          %c|__%k>--<%c__|     /                  .----_
            %r(%y ( ')%r)          %c|__%k>--<%c__|    |                 /' _---_~\
         %r`-)) %y)) %r(           %c|__%k>--<%c__|    |               /'  /     ~\`\
        %r,/,%y'//( %r(             %c\__%k>--<%c__\    \            /'  //        ||
      %r,( %y( ((, %r))              %c~-__%k>--<%c_~-_  ~--____---~' _/'/        /'
    %r`~/  %y)` ) %r,/|                 %c~-_~%k>--<%c_/-__       __-~ _/
  %r._-~//%y( )/%r )) `                    %c~~-'_/_/ /~~~~~~~__--~
   %r;'( %y')/ %r,)(                              %c~~~~~~~~~~
  %r' ') '( (/
    '   '  `
"""

mapping = {
    "%x": x,
    "%k": k,
    "%r": r,
    "%g": g,
    "%y": y,
    "%b": b,
    "%m": m,
    "%c": c,
    "%w": w,
}
# Get rid of starting newline, replace color escapes
dragon = dragon[1:]
for k, v in mapping.items():
    dragon = dragon.replace(k, v)
print(dragon)
